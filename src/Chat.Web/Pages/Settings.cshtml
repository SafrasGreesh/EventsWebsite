    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Настройки находок</h5>
            <form>
                <div class="mb-3">
                    <label for="distance" class="form-label">Максимальное расстояние</label>
                    <input type="range" class="form-range" id="distance" min="1" max="100" value="50">
                    <div class="d-flex justify-content-between">
                        <span>1 км</span>
                        <span>100 км</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="age-range" class="form-label">Диапазон возраста</label>
                    <input type="range" class="form-range" id="age-range" min="18" max="65" value="25,40">
                    <div class="d-flex justify-content-between">
                        <span>18 лет</span>
                        <span>65 лет</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Показывать только</label>
                    <div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="show-men" checked>
                            <label class="form-check-label" for="show-men">
                                Мужчин
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="show-women" checked>
                            <label class="form-check-label" for="show-women">
                                Женщин
                            </label>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Показывать только тех, кто ищет</label>
                    <div>
                        <div class="form-check">
